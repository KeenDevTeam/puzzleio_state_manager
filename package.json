{
  "name": "@puzzleio/state-manager",
  "version": "1.0.0",
  "description": "Manage current state of the workflow using different backend systems",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "node .",
    "clean": "rimraf dist/",
    "build": "tsc",
    "rebuild": "run-s clean build",
    "test": "mocha --exit --require ts-node/register test/**/*.spec.ts",
    "coverage": "nyc npm run test",
    "lint": "eslint .",
    "prepublish": "run-s lint test coverage rebuild"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com-personal:PuzzleIO/state-manager.git"
  },
  "keywords": [],
  "author": "KeenDev Team",
  "devDependencies": {
    "@types/chai": "^4.2.13",
    "@types/chai-as-promised": "^7.1.3",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.11.4",
    "@types/redis": "^2.8.27",
    "@types/shortid": "0.0.29",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "dotenv": "^8.2.0",
    "env-var": "^6.3.0",
    "eslint": "^7.10.0",
    "mocha": "^8.1.3",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "coverage/**/*",
      "dist/**/*",
      "test/**/*.spec.ts",
      "test/mock/**/*.ts",
      "**/*.d.ts"
    ],
    "reporter": [
      "text",
      "html",
      "lcov"
    ],
    "all": true
  },
  "dependencies": {
    "@speedup/error": "^1.0.7",
    "redis": "^3.0.2",
    "shortid": "^2.2.15"
  }
}
